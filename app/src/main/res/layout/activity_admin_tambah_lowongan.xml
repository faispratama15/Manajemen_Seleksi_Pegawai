<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/border_card">

        <!-- Judul -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Lowongan Baru"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Input Posisi -->
        <EditText
            android:id="@+id/editPosisi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Posisi"
            android:backgroundTint="#B8ADAD"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <!-- Input Nama Perusahaan -->
        <EditText
            android:id="@+id/editPerusahaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Perusahaan"
            android:backgroundTint="#CCCCCC"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <!-- Input Lokasi -->
        <EditText
            android:id="@+id/editLokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lokasi"
            android:backgroundTint="#CCCCCC"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <!-- Input Periode -->
        <EditText
            android:id="@+id/editPeriode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Periode (contoh: 1 - 15 April 2025)"
            android:backgroundTint="#CCCCCC"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <!-- Input Deskripsi -->
        <EditText
            android:id="@+id/editDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Deskripsi Pekerjaan"
            android:minLines="4"
            android:gravity="top"
            android:backgroundTint="#CCCCCC"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <!-- Input Kualifikasi -->
        <EditText
            android:id="@+id/editKualifikasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kualifikasi"
            android:minLines="4"
            android:gravity="top"
            android:backgroundTint="#CCCCCC"
            android:textColor="#000000"
            android:layout_marginBottom="20dp" />

        <!-- Tombol Tambah -->
        <Button
            android:id="@+id/btnTambahLowongan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tambah Lowongan"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50" />

        <!-- Tombol Batal -->
        <Button
            android:id="@+id/btnBatalbt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Batal"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF9800"
            android:layout_marginTop="12dp" />
    </LinearLayout>
</ScrollView>
