<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutHasil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@drawable/bg_gradient">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/terimakasih"/>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_card"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSelamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Anda Dinyatakan Lulus Seleksi"
            android:gravity="center"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvNamaPelamar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama: -"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvPosisiDilamar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posisi: -"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvSkor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skor Anda: -"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvKeterangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Lulus"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:layout_marginTop="16dp" />

    </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/backHasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100dp"
            android:layout_marginTop="20dp"
            android:text="Kembali"
            android:backgroundTint="#FF9800"
            android:background="@drawable/border_button_orange"/>

</LinearLayout>

