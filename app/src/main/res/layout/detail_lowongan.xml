<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient">

    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/arrow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/back"
        android:padding="24dp"
        android:background="@drawable/border_card">

        <!-- Judul Posisi -->
        <TextView
            android:id="@+id/txtPosisi2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Staff IT"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <!-- Nama Perusahaan -->
        <TextView
            android:id="@+id/txtPerusahaan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PT Teknologi Nusantara"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="#666666"
            android:layout_marginBottom="4dp" />

        <!-- Lokasi -->
        <TextView
            android:id="@+id/txtLokasi2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokasi: Antang"
            android:textSize="14sp"
            android:textColor="#444444"
            android:layout_marginBottom="4dp" />

        <!-- Tanggal -->
        <TextView
            android:id="@+id/txtTanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Periode: 1 - 15 April 2025"
            android:textSize="14sp"
            android:textColor="#444444"
            android:layout_marginBottom="16dp" />

        <!-- Deskripsi Lengkap -->
        <TextView
            android:id="@+id/txtDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskripsi pekerjaan:\n\nBertanggung jawab atas pengembangan, pemeliharaan, dan dukungan sistem informasi internal perusahaan. Mampu bekerja dalam tim dan memiliki inisiatif tinggi terhadap penyelesaian masalah teknis.\n\nKualifikasi:\n- Minimal D3/S1 Teknik Informatika\n- Pengalaman 1 tahun di bidang yang sama\n- Menguasai PHP/Java/Kotlin menjadi nilai plus"
            android:textSize="14sp"
            android:textColor="#000000" />

        <!-- Tombol Lamar Sekarang -->
        <Button
            android:id="@+id/btnLamar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="80dp"
            android:text="Daftar sekarang"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:layout_marginTop="24dp" />

        <!-- Tombol Kembali -->
        <Button
            android:id="@+id/btnKembali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="80dp"
            android:text="Kembali"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF9800"
            android:layout_marginTop="12dp" />
    </LinearLayout>
</RelativeLayout>
