<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg_gradient">

    <!-- Judul -->
    <TextView
        android:id="@+id/txtJudulPendaftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar Pendaftar"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <!-- Tombol Kembali -->
    <ImageView
        android:id="@+id/btnBackPendaftar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/arrow" />

    <!-- RecyclerView untuk daftar pendaftar -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPendaftar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtJudulPendaftar"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

</RelativeLayout>
