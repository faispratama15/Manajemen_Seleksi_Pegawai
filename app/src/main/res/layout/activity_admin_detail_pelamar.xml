<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card_rounded"
        android:padding="24dp"
        android:layout_marginTop="40dp">

        <!-- Judul -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail Pelamar"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Nama Lengkap -->
        <TextView
            android:id="@+id/txtNamaplr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Lengkap"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Email -->
        <TextView
            android:id="@+id/txtEmailplr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Nomor Telepon -->
        <TextView
            android:id="@+id/txtTeleponplr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nomor Telepon"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Pendidikan Terakhir -->
        <TextView
            android:id="@+id/txtPendidikanplr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pendidikan Terakhir"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnUploadCVplr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lihat CV"
            android:backgroundTint="#607D8B"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btnKembaliplr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kembali"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnAccPelamarplr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACC Pelamar"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
