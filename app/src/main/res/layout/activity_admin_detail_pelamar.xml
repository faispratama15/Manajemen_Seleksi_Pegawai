<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card_rounded"
        android:padding="24dp"
        android:layout_marginTop="40dp">

        <!-- Judul -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail Pelamar"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Nama Lengkap -->
        <EditText
            android:id="@+id/edtNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Lengkap"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:backgroundTint="#FF9800"
            android:layout_marginBottom="12dp" />

        <!-- Email -->
        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:backgroundTint="#FF9800"
            android:layout_marginBottom="12dp" />

        <!-- Nomor Telepon -->
        <EditText
            android:id="@+id/edtTelepon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nomor Telepon"
            android:inputType="phone"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:backgroundTint="#FF9800"
            android:layout_marginBottom="12dp" />

        <!-- Pendidikan Terakhir -->
        <EditText
            android:id="@+id/edtPendidikan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pendidikan Terakhir"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:backgroundTint="#FF9800"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnUploadCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lihat CV"
            android:backgroundTint="#607D8B"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btnKembali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kembali"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnAccPelamar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACC Pelamar"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
