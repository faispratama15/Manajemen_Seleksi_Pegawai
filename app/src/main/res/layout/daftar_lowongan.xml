<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="16dp">

    <!-- Judul -->
    <TextView
        android:id="@+id/txtJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar Lowongan"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <!-- Tombol Daftar Lamaran -->
    <Button
        android:id="@+id/btnDaftarLamaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar Lamaran Saya"
        android:backgroundTint="#FF9800"
        android:textColor="#FFFFFF"
        android:layout_below="@id/txtJudul"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <!-- RecyclerView untuk Lowongan -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewLowongan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnDaftarLamaran"
        android:layout_marginTop="8dp" />
</RelativeLayout>
