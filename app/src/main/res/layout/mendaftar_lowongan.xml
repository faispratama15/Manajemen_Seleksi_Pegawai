<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card_rounded">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Pendaftaran Lowongan"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <!-- Nama Lengkap -->
        <EditText
            android:id="@+id/edtNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="Nama Lengkap"
            android:inputType="textPersonName"
            android:backgroundTint="#FF9800"
            android:layout_marginBottom="12dp" />

        <!-- Email -->
        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:backgroundTint="#FF9800"
            android:layout_marginBottom="12dp" />

        <!-- Nomor Telepon -->
        <EditText
            android:id="@+id/edtTelepon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="Nomor Telepon"
            android:inputType="phone"
            android:backgroundTint="#FF9800"
            android:layout_marginBottom="12dp" />

        <!-- Pendidikan Terakhir -->
        <EditText
            android:id="@+id/edtPendidikan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="Pendidikan Terakhir"
            android:inputType="text"
            android:backgroundTint="#FF9800"
            android:layout_marginBottom="12dp" />

        <!-- Upload CV (Simulasi) -->
        <Button
            android:id="@+id/btnUploadCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload CV"
            android:backgroundTint="#607D8B"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="20dp" />

        <!-- Tombol Kembali -->
        <Button
            android:id="@+id/btnKembali3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kembali"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp" />

        <!-- Tombol Kirim -->
        <Button
            android:id="@+id/btnKirim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kirim Lamaran"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
