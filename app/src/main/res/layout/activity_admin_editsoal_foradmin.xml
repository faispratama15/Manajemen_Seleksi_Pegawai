<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/border_card">

    <!-- Baris pertanyaan dan checkbox -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <!-- Pertanyaan -->
        <TextView
            android:layout_toLeftOf="@id/opsi"
            android:id="@+id/txtPertanyaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apa itu Kotlin?"
            android:textSize="16sp"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_alignParentRight="true"
            android:id="@+id/opsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnEditSoala"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF9800"
                android:layout_marginTop="12dp"
                android:layout_gravity="end" />

            <Button
                android:id="@+id/btnHapusSoala"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hapus"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF0000"
                android:layout_marginTop="12dp"
                android:layout_gravity="end" />
        </LinearLayout>



    </RelativeLayout>

    <!-- Pilihan Jawaban -->
    <RadioGroup
        android:id="@+id/radioGroupJawabana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioAa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A. Bahasa Pemrograman" />

        <RadioButton
            android:id="@+id/radioBa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B. Database" />

        <RadioButton
            android:id="@+id/radioCa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C. Framework" />

        <RadioButton
            android:id="@+id/radioDa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D. Aplikasi Musik" />
    </RadioGroup>

    <!-- Tombol Edit -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jawaban: "/>

        <TextView
            android:id="@+id/jawaban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"/>
    </LinearLayout>

</LinearLayout>
