<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="24dp">

    <!-- Logo / Ilustrasi -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <!-- Judul -->
    <TextView
        android:id="@+id/txtSelamatDatang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Datang!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FF9800"
        android:layout_below="@id/imgLogo"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true" />

    <!-- Subjudul -->
    <TextView
        android:id="@+id/txtSubjudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temukan pekerjaan impianmu dengan mudah."
        android:textSize="16sp"
        android:textColor="#555555"
        android:layout_below="@id/txtSelamatDatang"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true" />

    <!-- Tombol Login -->
    <Button
        android:id="@+id/btnMasuk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masuk"
        android:backgroundTint="#FF9800"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="24dp" />

    <!-- Tombol Daftar -->
    <Button
        android:id="@+id/btnDaftar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar"
        android:backgroundTint="#FFFFFF"
        android:textColor="#FF9800"
        android:layout_below="@id/btnMasuk"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_button_orange" />
</RelativeLayout>
