<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.soal.TambahSoalActivity"
    android:background="@drawable/bg_gradient"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/border_card">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Soal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/editPertanyaan2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan pertanyaan"
            android:layout_marginBottom="8dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/radioGroupJawabana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A."
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/jawaban1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Jawaban A"
                    android:layout_marginBottom="16dp" />

                <RadioButton
                    android:id="@+id/radio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B."
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/jawaban2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Jawaban B"
                    android:layout_marginBottom="16dp" />

                <RadioButton
                    android:id="@+id/radio3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C."
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/jawaban3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Jawaban C"
                    android:layout_marginBottom="16dp" />

                <RadioButton
                    android:id="@+id/radio4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D."
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/jawaban4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Jawaban D"
                    android:layout_marginBottom="16dp" />

            </RadioGroup>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jawaban: "/>

            <TextView
                android:id="@+id/jawabanBenar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"/>
        </LinearLayout>



        <Button
            android:id="@+id/btnSimpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Oke"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50" />
    </LinearLayout>

</LinearLayout>